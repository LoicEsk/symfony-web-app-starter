{% extends 'base.html.twig' %}

{% block title %}Starter - Réinitialiser son mot de passe{% endblock %}

{% block content %}
    {% include 'parts/flashBang.html.twig' %}

    <h1 class="text-center text-primary mt-5">Réinitialiser son mot de passe</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-4 mt-4 mb-4">
            <div class="bg-light p-4 rounded shadow-sm mb-2">
                {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}
                    <button class="mx-auto d-block btn btn-primary text-white">Réinitialiser</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
