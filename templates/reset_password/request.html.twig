{% extends 'base.html.twig' %}

{% block title %}Starter - Réinitialiser son mot de passe{% endblock %}

{% block content %}
    {% include 'parts/flashBang.html.twig' %}

    <h1 class="text-center text-primary mt-5">Récupérer son mot de passe</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-4 mt-4 mb-4">
            <div class="bg-light p-4 rounded shadow-sm mb-2">
                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div class="mb-4">
                    <small>
                        Entrez votre adresse mail, nous vous enverrons un lien poru réinitialiser votre mot de passe.
                    </small>
                </div>

                <button class="mx-auto d-block btn btn-primary text-white">Réinitialiser votre mot de passe</button>
            {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
    
{% endblock %}
