{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Starter - Connexion{% endblock %}

{% block content %}
    {% include 'parts/flashBang.html.twig' %}

    <h1 class="text-center text-primary mt-5">Connexion</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-4 mt-4 mb-4">
            <form action="{{ path('app_login') }}" method="post" class="bg-light p-4 rounded shadow-sm mb-2">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="mb-3">
                    <label for="username" class="form-label">Login</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" id="username" name="_username" value="{{ last_username }}">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" class="form-control"  id="password" name="_password">
                </div>
                <p class="text-center"><button type="submit" class="btn btn-primary text-white">Se connecter</button></p>

            </form>
            <div class="row">
                <div class="col-sm-6"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a></div>
                <div class="col-sm-6 text-end"><a href="{{ path('app_register') }}">Créer un compte</a></div>
            </div>
        </div>
    </div>
{% endblock %}